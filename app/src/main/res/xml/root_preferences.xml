<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Test Settings">

        <ListPreference
            android:defaultValue="10"
            app:defaultValue="10"
            app:entries="@array/num_question_entries"
            app:entryValues="@array/num_question_values"
            app:key="numQuestions"
            app:title="Number of Questions"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:defaultValue="10"
            app:defaultValue="10"
            app:entries="@array/time_to_answer_entries"
            app:entryValues="@array/time_to_answer_values"
            app:key="timeToAnswer"
            app:title="Time to Answer (seconds)"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreference
            app:key="immediateFeedback"
            app:title="Immediate Feedback"
            app:defaultValue="true" />

        <in.samlav.eartrainer.CustomSeekBar
            android:key="toneTime"
            android:layout="@layout/custom_seek_bar"
            android:title="Time for Tone (seconds)"
            android:id="@+id/tone_time"
            app:title="Length Tone is Played for (milliseconds)" />

        <SeekBarPreference
            android:defaultValue="5"
            android:title="% Deviation from Center of Bin"
            app:showSeekBarValue="true"
            app:min="0"
            android:max="25"
            app:key="deviation" />

        <ListPreference
            android:title="Number of Bins"
            android:defaultValue="31"
            android:key="numBins"
            app:entries="@array/num_bins_entries"
            app:entryValues="@array/num_bins_values"
            app:useSimpleSummaryProvider="true" />

        <MultiSelectListPreference
            android:title="Which Bands to Exclude"
            android:key="whichBins" />

        <SwitchPreference
            app:key="showExcluded"
            app:title="Show Disabled Bins"
            app:defaultValue="false" />

        <SeekBarPreference
            android:defaultValue="1"
            app:title="Number of Tries"
            app:showSeekBarValue="true"
            app:key="numTries"
            app:min="1"
            android:max="10" />

    </PreferenceCategory>

</PreferenceScreen>